<!-- fragment_youtube_player.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- YouTube player -->
    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:videoId="S0Q4gqBUs7c"
        app:autoPlay="true"/>

    <!-- SeekBar for video playback progress -->
    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/youtube_player_view"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:progress="0"
        android:max="100" />

    <!-- TextViews for displaying total and remaining time -->
    <TextView
        android:id="@+id/text_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek_bar"
        android:layout_alignParentStart="true"
        android:text="00:00"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/text_remaining_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seek_bar"
        android:layout_alignParentEnd="true"
        android:text="00:00"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginEnd="16dp"/>

    <!-- Buttons for full screen, video quality, loop, and playback speed settings -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_total_time"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_full_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full Screen" />

        <Button
            android:id="@+id/btn_video_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Quality" />

        <Button
            android:id="@+id/btn_loop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loop" />

        <Button
            android:id="@+id/btn_playback_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playback Speed" />
    </LinearLayout>
</RelativeLayout>
