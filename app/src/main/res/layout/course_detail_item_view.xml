<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:minHeight="70dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_layout"
        android:padding="20dp"
        android:background="@drawable/rounded_bg_item_account">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_module_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="start"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Communication with client and marketing proposals"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLessonTiming"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="00:58:00"
                        android:textSize="8sp"

                        android:fontFamily="@font/roboto_light"
                        android:textColor="#FFFFFF"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="@color/primary"


                        />

                    <Button

                        android:id="@+id/btnTotalLessons"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="2 Lessons"
                        android:textSize="8sp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/roboto_light"
                        android:backgroundTint="@color/primary"
                        />


                </LinearLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/arrow_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_keyboard_arrow_down_24"
                    android:layout_gravity="right"
                    />


            </LinearLayout>



        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expandable_layout">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/child_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>