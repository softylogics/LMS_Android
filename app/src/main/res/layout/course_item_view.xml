<!-- course_item_layout.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/rounded_bg_course_item"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"


        >

        <!-- Course Image -->
        <ImageView
            android:id="@+id/image_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/btnbg" />

        <!-- Course Title -->
        <TextView
            android:id="@+id/txt_course_title_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto"
            android:text="Course Title"
            android:textColor="@color/textColor"
            android:paddingHorizontal="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="13sp" />

        <!-- Rating Widget -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="10dp"
            android:orientation="horizontal">

            <!-- Star Rating -->
            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:rating="3"

                style="@style/Widget.AppCompat.RatingBar.Small"

                />



            <!-- Numeric Rating -->
            <TextView
                android:id="@+id/txt_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="(0.0)"
                android:fontFamily="@font/roboto_light"
                android:textSize="11sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:max="100"
            />
        <!-- Progress Bar with percentage -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="10dp"
            android:orientation="horizontal">

            <!-- Numerical Percentage -->
            <TextView
                android:id="@+id/txt_progress_percentage"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0% completed"
                android:fontFamily="@font/roboto_light"
                android:textSize="11sp"

                android:textColor="@android:color/black" />



            <!-- Completed Lectures -->
            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_completed_lectures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0"
                android:gravity="right"
                android:fontFamily="@font/roboto_light"
                android:textSize="11sp"

                android:textColor="@android:color/black" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
